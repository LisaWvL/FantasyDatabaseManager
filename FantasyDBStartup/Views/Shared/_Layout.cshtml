@using System.Reflection
@using FantasyDB.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



@{
    // Load all assemblies in the current app domain
    var assemblies = AppDomain.CurrentDomain.GetAssemblies();

    // Find the FantasyDB assembly (containing models)
    var modelAssembly = assemblies.FirstOrDefault(a => a.GetName().Name == "FantasyDB");

    // Ensure the assembly was found
    var entityTypes = modelAssembly?.GetTypes()
        .Where(t => t.Namespace != null
                    && t.Namespace.StartsWith("FantasyDB.Models") // Allow sub-namespaces
                    && t.IsClass
                    && !t.IsAbstract // Ignore abstract classes
                    && t.GetProperty("Id") != null) // Ensure it has an 'Id' property
        ?? Enumerable.Empty<Type>();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FantasyDB</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">FantasyDB</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    @foreach (var type in entityTypes)
                    {
                        <li class="list-group-item">
                            @{
                                var apiEntity = "api/" + type.Name.ToLower();
                            }
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="footer bg-dark text-light text-center py-3 mt-4">
        <div class="container">
            <span>&copy; @DateTime.Now.Year - FantasyDB</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
