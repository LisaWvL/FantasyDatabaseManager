@model FantasyDB.Models.Character
 “
<!DOCTYPE html>
”
@{
    ViewData["Title"] = "Create Character";
}

<h2>Create Character</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Role"></label>
        <input asp-for="Role" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FactionId">Faction</label>
        <select asp-for="FactionId" class="form-control" asp-items="ViewBag.FactionId">
            <option value="">-- Select Faction --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="LocationId">Location</label>
        <select asp-for="LocationId" class="form-control" asp-items="ViewBag.LocationId">
            <option value="">-- Select Location --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="LanguageId">Language</label>
        <select asp-for="LanguageId" class="form-control" asp-items="ViewBag.LanguageId">
            <option value="">-- Select Language --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="SnapshotId">Snapshot</label>
        <select asp-for="SnapshotId" class="form-control" asp-items="ViewBag.SnapshotId">
            <option value="">-- Select Snapshot --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
