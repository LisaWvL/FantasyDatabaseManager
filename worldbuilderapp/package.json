{
    "name": "worldbuilderapp",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "wait": "wait-on http://localhost:56507",
        "dev:ready": "concurrently \"npm run dev\" \"npm run wait\"",
        "build": "vite build",
        "preview": "vite preview",
        "lint": "eslint src --ext .js,.jsx",
        "start": "electron",
        "start:electron": "concurrently \"vite\" \"electron .\"",
        "format": "prettier --write src",
        "check": "tsc --noEmit"
    },
    "dependencies": {
        "@tiptap/extension-font-family": "^2.11.7",
        "@tiptap/extension-placeholder": "^2.11.7",
        "@tiptap/extension-underline": "^2.11.7",
        "@tiptap/react": "^2.11.7",
        "@tiptap/starter-kit": "^2.11.7",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.21.0",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@vitejs/plugin-react": "^4.3.4",
        "concurrently": "^8.2.2",
        "eslint": "^9.24.0",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "globals": "^15.15.0",
        "prettier": "^3.5.3",
        "vite": "^6.2.0",
        "wait-on": "^7.0.1"
    }
}
